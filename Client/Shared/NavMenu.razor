<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="" @onclick="CloseNavMenu">Ben Hopkins</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="OpenNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="CloseNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                About
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                Projects
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="blog">
                Blog
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool navMenuShowing = false;

    private string? NavMenuCssClass => navMenuShowing ? null : "collapse";

    private void OpenNavMenu()
    {
        navMenuShowing = true;
    }

    private void CloseNavMenu()
    {
        navMenuShowing = false;
    }
}
